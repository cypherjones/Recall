html,
body
  width: 100%
  height: 100%
  color: #2e3d49
  font-family 'Open Sans', sans-serif
  margin auto
a
  text-decoration none
h1
  font-weight: 300
  padding-top: 10px
ul
  padding-left 0
h1
.attempts-box
.controls
  text-align center
h1
.attempts-box
  font-weight 300
.attempts-box
  padding-bottom 40px
.canvas
  // max-width 700px
  margin 0 auto
  padding 32px
  background-color #999999
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  flex-wrap wrap
  justify-content space-around
  width 33%
.canvas .card
	display inline-block
	height 115px
	width 115px
	background-color #2e3d49
	margin 0 30px 30px 0
	line-height 150px
 text-align center
 border-radius 10px
 transform-style preserve-3d
 -webkit-transform-style preserve-3d
 transform rotateY(180deg)
 -webkit-transform rotateY(180deg)
 transition transform .3s ease  
 -webkit-transform transform .3s ease
 font-size 45px

.canvas .card:nth-child(4n)
	margin 0 0 15px 0
	
.canvas .card:nth-child(n+13)
	margin 0 30px 0 0 

.canvas .card:nth-child(n+13):nth-child(4n)
  margin 0
  
.card.flip
.card.matched
  transform rotateY(0)
  -webkit-transform rotateY(0)
  background #778787
  color #ffffff
.control-btn
  background-color #000
  border-radius 4px
  border none
  box-sizing none
  cursor pointer
  color #ffffff
  font-size 20px
  padding 10px 10px
  width 100px
  margin 0 auto 20px
.control-btn.restart
  background-color #f8bb86
button:focus 
  outline none

.fa-star
  color #000
.fa-star.active
  color red
.thanks
  text-align center
  
@media screen and (max-width: 1024px)
  .canvas .card
    height 100px
    width 100px
    font-size 45px
    line-height 90px
  .canvas
    width 48%

@media screen and (max-width: 768px)
  .canvas
    width 78%

@media screen and (max-width: 479px)
 .canvas .card 
   height 50px
   width 50px
   font-size 24px
   line-height 50px
  .swal2-popup .swal2-styled
    padding 0.625em 1em !important
  #display
    margin-top 1px
    margin-bottom 1px
  .attempts-box
    padding-bottom 0
@media screen and (max-width: 360px)
  .canvas .card
    height 45px
    width 45px
@media screen and (max-width: 320px)
  .canvas .card
    height 39px
    width 39px
